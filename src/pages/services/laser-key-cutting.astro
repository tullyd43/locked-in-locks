---
import BaseLayout from '../../layouts/BaseLayout.astro';

const pageTitle = 'Laser Key Cutting | Locked In Locksmith';
const pageDescription =
	'Need a new laser-cut key? We have the equipment to cut a new key for you with precision.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<div class="container my-5">
		<div class="row">
			<div class="col-lg-8 mx-auto text-center">
				<h1 class="display-4">Laser Key Cutting</h1>
				<p class="lead">
					We can cut a new laser-cut key for your vehicle with precision. We can also cut a new key for you if you've lost your original.
				</p>
			</div>
		</div>

		<div class="row mt-5">
			<div class="col-lg-12">
				<h2>Our Process</h2>
				<p>We use state-of-the-art equipment to cut laser-cut keys with precision.</p>

				<h3 class="mt-4">Brands We Service</h3>
				<p>We can cut laser-cut keys for all major manufacturers. Click on a brand below to learn more about our specific services for your vehicle.</p>
				<!-- Add brand links here -->

				<h3 class="mt-4">Frequently Asked Questions</h3>
				<ul>
					<li>How long does it take to cut a laser-cut key?</li>
					<li>Can you cut a laser-cut key without the original?</li>
					<li>Is it cheaper to get a new laser-cut key from you than from the dealership?</li>
				</ul>

				<div class="text-center mt-4">
					<a href="/contact-us" class="btn btn-primary">Get a Free Quote</a>
				</div>
			</div>
		</div>
	</div>
</BaseLayout>
