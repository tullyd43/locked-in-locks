---
import BaseLayout from '../../layouts/BaseLayout.astro';

const pageTitle = 'Immobilizer Reflashing | Locked In Locksmith';
const pageDescription =
	'Need your immobilizer reflashed? We can reflash your immobilizer to ensure that it's working properly.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<div class="container my-5">
		<div class="row">
			<div class="col-lg-8 mx-auto text-center">
				<h1 class="display-4">Immobilizer Reflashing</h1>
				<p class="lead">
					We can reflash your vehicle's immobilizer to ensure that it's working properly. We can also program new immobilizers.
				</p>
			</div>
		</div>

		<div class="row mt-5">
			<div class="col-lg-12">
				<h2>Our Process</h2>
				<p>We use the latest technology to reflash immobilizers for all makes and models of vehicles.</p>

				<h3 class="mt-4">Brands We Service</h3>
				<p>We can reflash immobilizers for all major manufacturers. Click on a brand below to learn more about our specific services for your vehicle.</p>
				<!-- Add brand links here -->

				<h3 class="mt-4">Frequently Asked Questions</h3>
				<ul>
					<li>How long does it take to reflash an immobilizer?</li>
					<li>Can you reflash an immobilizer without the original?</li>
					<li>Is it cheaper to get a new immobilizer from you than from the dealership?</li>
				</ul>

				<div class="text-center mt-4">
					<a href="/contact-us" class="btn btn-primary">Get a Free Quote</a>
				</div>
			</div>
		</div>
	</div>
</BaseLayout>
