---
import BaseLayout from '../../layouts/BaseLayout.astro';

const pageTitle = 'Smart Key Programming | Locked In Locksmith';
const pageDescription =
	'Need a new smart key programmed? We can program smart keys for all makes and models of vehicles.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<div class="container my-5">
		<div class="row">
			<div class="col-lg-8 mx-auto text-center">
				<h1 class="display-4">Smart Key Programming</h1>
				<p class="lead">
					We can program a new smart key for your vehicle in minutes. We can also reprogram your existing smart key.
				</p>
			</div>
		</div>

		<div class="row mt-5">
			<div class="col-lg-12">
				<h2>Our Process</h2>
				<p>We use the latest technology to program smart keys for all makes and models of vehicles.</p>

				<h3 class="mt-4">Brands We Service</h3>
				<p>We can program smart keys for all major manufacturers. Click on a brand below to learn more about our specific services for your vehicle.</p>
				<!-- Add brand links here -->

				<h3 class="mt-4">Frequently Asked Questions</h3>
				<ul>
					<li>How long does it take to program a smart key?</li>
					<li>Can you program a smart key without the original?</li>
					<li>Is it cheaper to get a new smart key from you than from the dealership?</li>
				</ul>

				<div class="text-center mt-4">
					<a href="/contact-us" class="btn btn-primary">Get a Free Quote</a>
				</div>
			</div>
		</div>
	</div>
</BaseLayout>
