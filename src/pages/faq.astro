---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Frequently Asked Questions | Locked In Locksmith";
const pageDescription =
	"Find answers to common questions about our locksmith services, pricing, emergency availability, and more. Get the information you need from Locked In Locksmith.";

const faqs = [
	{
		question: "How much does a locksmith cost?",
		answer:
			"The cost of a locksmith can vary depending on the service. For example, a simple lockout service will be less expensive than a full lock replacement. We provide transparent, upfront pricing before any work begins. Please contact us for a free quote.",
	},
	{
		question: "Are you available 24/7 for emergencies?",
		answer:
			"Yes, we offer 24/7 emergency locksmith services. Whether you're locked out of your home, car, or office, day or night, we are ready to help. Call us anytime for immediate assistance.",
	},
	{
		question: "What areas do you serve?",
		answer:
			"We proudly serve the entire metropolitan area and surrounding suburbs. You can find a detailed list of our service locations on our Service Areas page.",
	},
	{
		question: "Can you make a key from a lock if I've lost all my keys?",
		answer:
			"In most cases, yes. We can often create a new key by 'impressioning' the lock or by disassembling it to determine the correct key cuts. This is a common service for residential, commercial, and automotive locks.",
	},
	{
		question: "Is your locksmith service licensed and insured?",
		answer:
			"Absolutely. Locked In Locksmith is fully licensed, bonded, and insured for your peace of mind. Our technicians are highly trained and certified professionals.",
	},
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<script type="application/ld+json" set:html={JSON.stringify({
		"@context": "https://schema.org",
		"@type": "FAQPage",
		"mainEntity": faqs.map(faq => ({
			"@type": "Question",
			"name": faq.question,
			"acceptedAnswer": {
				"@type": "Answer",
				"text": faq.answer
			}
		}))
	})} />

	<h1>Frequently Asked Questions</h1>
	<p>
		Here are some of our most frequently asked questions. If you don't find
		your answer here, please don't hesitate to contact us.
	</p>

	<div class="faq-container">
		{
			faqs.map((faq) => (
				<details class="faq-item">
					<summary>{faq.question}</summary>
					<p>{faq.answer}</p>
				</details>
			))
		}
	</div>
</BaseLayout>

<style>
	.faq-container {
		margin-top: 2rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	.faq-item {
		border: 1px solid #ccc;
		border-radius: 8px;
		padding: 1rem;
	}
	.faq-item summary {
		font-weight: bold;
		cursor: pointer;
	}
	.faq-item p {
		margin-top: 0.75rem;
		padding-left: 1rem;
	}
</style>

