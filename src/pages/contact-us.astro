---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Contact Us | Locked In Locksmith';
const pageDescription =
	'Get in touch with Locked In Locksmith for a free quote or emergency service. We are available 24/7.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<div class="container my-5">
		<div class="row">
			<div class="col-lg-8 mx-auto text-center">
				<h1 class="display-4">Contact Us</h1>
				<p class="lead">
					We're here to help you 24/7. Whether you're locked out, need a new key, or have a question, don't hesitate to reach out.
				</p>
			</div>
		</div>

		<div class="row mt-5">
			<div class="col-lg-6 mb-4">
				<div class="card h-100">
					<div class="card-body">
						<h2 class="h4 mb-4">Send Us a Message</h2>
						<form>
							<div class="mb-3">
								<label for="name" class="form-label">Full Name</label>
								<input type="text" class="form-control" id="name" name="name" />
							</div>
							<div class="mb-3">
								<label for="email" class="form-label">Email Address</label>
								<input type="email" class="form-control" id="email" name="email" />
							</div>
							<div class="mb-3">
								<label for="phone" class="form-label">Phone Number</label>
								<input type="tel" class="form-control" id="phone" name="phone" />
							</div>
							<div class="mb-3">
								<label for="message" class="form-label">Message</label>
								<textarea class="form-control" id="message" name="message" rows="5"></textarea>
							</div>
							<button type="submit" class="btn btn-primary w-100">Submit</button>
						</form>
						<small class="d-block text-center mt-3 text-muted">
							Note: For emergency service, please call us directly.
						</small>
					</div>
				</div>
			</div>

			<div class="col-lg-6 mb-4">
				<div class="card h-100">
					<div class="card-body">
						<h2 class="h4 mb-4">Contact Information</h2>
						<ul class="list-unstyled">
							<li class="mb-3 d-flex align-items-start">
								<i class="bi bi-telephone-fill me-3 fs-4"></i>
								<div>
									<strong>Phone</strong><br />
									<a href="tel:+18593939362">(859) 393-9362</a>
									<br />
									<small class="text-muted">Available 24/7 for emergencies</small>
								</div>
							</li>
							<li class="mb-3 d-flex align-items-start">
								<i class="bi bi-envelope-fill me-3 fs-4"></i>
								<div>
									<strong>Email</strong><br />
									<a href="mailto:contact@lockedinlocksmith.com">contact@lockedinlocksmith.com</a>
									<br />
									<small class="text-muted">For quotes and non-urgent inquiries</small>
								</div>
							</li>
							<li class="d-flex align-items-start">
								<i class="bi bi-geo-alt-fill me-3 fs-4"></i>
								<div>
									<strong>Service Area</strong><br />
									<span>Greater Cincinnati, USA</span>
									<br />
									<small class="text-muted">Mobile service that comes to you</small>
								</div>
							</li>
						</ul>

						<h3 class="h5 mt-4 mb-3">Our Service Area</h3>
						<div class="ratio ratio-4x3">
							<iframe
								src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d198333.0323483298!2d-84.69296162507388!3d39.14029999999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8840519b5a71a279%3A0x24isf_content_id5a5a!2sCincinnati%2C%20OH!5e0!3m2!1sen!2sus!4v1678886400000!5m2!1sen!2sus"
								width="100%"
								height="100%"
								style="border:0;"
								allowfullscreen=""
								loading="lazy"
								referrerpolicy="no-referrer-when-downgrade"
							></iframe>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<style>
		.bi {
			color: var(--bs-primary);
		}
	</style>
</BaseLayout>