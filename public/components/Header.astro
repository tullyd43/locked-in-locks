---
// This component contains the site's header and main navigation.
// It receives the currentPath to correctly highlight the active link.
const { currentPath } = Astro.props;
---

<header>
	<div class="nav-container">
		<button
			class="hamburger"
			id="hamburger-menu"
			aria-label="Open navigation"
			aria-controls="nav-list"
			aria-expanded="false"
		>
			<span></span>
			<span></span>
			<span></span>
		</button>
		<nav class="nav-menu" id="main-nav" aria-label="Main navigation">
			<ul id="nav-list" role="menubar">
				<li class="nav-list-items" role="menuitem">
					<a href="/" aria-current={currentPath === '/' ? 'page' : false}
						>Home</a
					>
				</li>
				<li class="nav-list-items" role="menuitem">
					<a
						href="/services.html"
						id="services-link"
						aria-expanded="false"
						aria-controls="services-dropdown"
						aria-current={currentPath.startsWith('/services')
							? 'page'
							: false}>Services</a
					>
					<ul class="dropdown" id="services-dropdown" role="menu">
						<li class="nav-list-item-dropdown" role="menuitem">
							<a
								href="/services.html"
								tabindex="0"
								aria-current={currentPath === '/services.html' ? 'page' : false}
								><strong>All Services</strong></a
							>
						</li>
						<li class="nav-list-item-dropdown" role="menuitem">
							<a
								href="/residential-services.html"
								tabindex="0"
								aria-current={currentPath === '/residential-services.html' ? 'page' : false}
								>Residential Services</a
							>
						</li>
						<li class="nav-list-item-dropdown" role="menuitem">
							<a
								href="/commercial-services.html"
								tabindex="0"
								aria-current={currentPath === '/commercial-services.html' ? 'page' : false}
								>Commercial Services</a
							>
						</li>
						<li class="nav-list-item-dropdown" role="menuitem">
							<a
								href="/automotive-services.html"
								tabindex="0"
								aria-current={currentPath === '/automotive-services.html' ? 'page' : false}
								>Automotive Services</a
							>
						</li>
						<li class="nav-list-item-dropdown" role="menuitem">
							<a
								href="/emergency-services.html"
								tabindex="0"
								aria-current={currentPath === '/emergency-services.html' ? 'page' : false}
								>24/7 Emergency Services</a
							>
						</li>
					</ul>
				</li>
				<li class="nav-list-items" role="menuitem">
					<a href="/about-us.html" aria-current={currentPath === '/about-us.html' ? 'page' : false}>About Us</a>
				</li>
				<li class="nav-list-items" role="menuitem">
					<a href="/service-areas.html" aria-current={currentPath === '/service-areas.html' ? 'page' : false}>Service Areas</a>
				</li>
				<li class="nav-list-items" role="menuitem">
					<a href="/security-tips.html" aria-current={currentPath === '/security-tips.html' ? 'page' : false}>Security Tips</a>
				</li>
				<li class="nav-list-items" role="menuitem">
					<a href="/faq.html" aria-current={currentPath === '/faq.html' ? 'page' : false}>FAQ</a>
				</li>
				<li class="nav-list-items" role="menuitem">
					<a href="/contact-us.html" aria-current={currentPath === '/contact-us.html' ? 'page' : false}>Contact Us</a>
				</li>
			</ul>
		</nav>
	</div>
</header>